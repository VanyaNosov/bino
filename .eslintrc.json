{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-extra-parens": "warn",
        "no-irregular-whitespace": "warn",
        "eqeqeq": "error",
        "no-shadow": "warn",
        "no-use-before-define": "warn"
    }
}